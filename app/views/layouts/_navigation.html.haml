= nav_bar brand: 'haste gut gemacht!', brand_link: '/', fixed: :top, responsive: true do
  = menu_group id: 'menu' do
    = menu_item "Kontakt", contact_forms_new_path
    - if user_signed_in?
      - if current_user.has_role? :admin
        = drop_down 'Admin Stuff' do
          = menu_item "Admin Dashboard", admin_path
          = menu_item "Users", admin_users_path
          = menu_item "Lobs", lobs_path
  = menu_group pull: 'right' do
    - if current_user
      = menu_item "abmelden", signout_path
    - else
      = menu_item "anmelden", signin_path