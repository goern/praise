.fieldset
  = simple_form_for @contact_form, html: {class: 'form-horizontal' } do |f|
    = f.error_notification

    .form-inputs
      = f.input :name, :required => false, prompt: "Choose a User"
      = f.input :email, :required => false
      = f.input :message, :as => :text, :required => false, label: t('Message')
      = raw recaptcha_tag(:challenge)

    %div.btn-group
    .form-actions
      = f.button :submit, t('send'), :class => "btn btn-success"
      = link_to t('cancel'), root_path, :class => "btn btn-action"
