.fieldset
  = simple_form_for @user, html: {class: 'form-horizontal' } do |f|
    = f.error_notification

    .form-inputs
      = f.input :visible

    %div.btn-group
    .form-actions
      = f.button :submit, :class => "btn btn-success"
