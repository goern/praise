.fieldset
  = simple_form_for @lob, html: {class: 'form-horizontal' }  do |f|
    = f.error_notification

    .form-inputs
      = f.input :description, label: t('Description')
      = f.input :user_fb_id, collection: @friends, :label_method => lambda { |obj| obj['name'].to_s }, :value_method => lambda { |obj| obj['id'].to_i }, prompt: t("Choose a User"), label: t('User'), :as => :select
    %div.btn-group
    .form-actions
      = f.submit t('save'), :class => "btn btn-success"
      = link_to t('cancel'), root_path, :class => "btn btn-action"

