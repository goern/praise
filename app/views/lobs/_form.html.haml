.fieldset
  = simple_form_for @lob, html: {class: 'form-horizontal' }  do |f|
    = f.error_notification

    .form-inputs
      = f.input :description, label: t('Description')
      = f.input :published, label: t('Published')
      = f.association :user, collection: User.all(order: 'email'), prompt: t("Choose a User"), label: t('User')

    %div.btn-group
    .form-actions
      = f.submit t('save'), :class => "btn btn-success"
      = link_to t('cancel'), root_path, :class => "btn btn-action"

